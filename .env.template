# AWS Configuration
# CRITICAL: Always use 'personal' profile to deploy to the correct account (383757231925)
# DO NOT use 'default' profile - that's a different account!
AWS_PROFILE=personal
AWS_ACCOUNT_ID=383757231925
AWS_REGION=us-east-1
# Note: AWS credentials are read from ~/.aws/credentials [personal] profile
# Do NOT set AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY here - use the profile instead

# Pulumi Configuration
PULUMI_CONFIG_PASSPHRASE=your-pulumi-passphrase
PULUMI_STACK_NAME=dev
PULUMI_ORG=your-pulumi-org

# DynamoDB Tables
DYNAMODB_USERS_TABLE=footprint-users-${PULUMI_STACK_NAME}
DYNAMODB_VISITED_PLACES_TABLE=footprint-visited-places-${PULUMI_STACK_NAME}
DYNAMODB_SYNC_TABLE=footprint-sync-${PULUMI_STACK_NAME}

# S3 Buckets
S3_GEOGRAPHIC_DATA_BUCKET=footprint-geographic-data-${PULUMI_STACK_NAME}
S3_USER_EXPORTS_BUCKET=footprint-user-exports-${PULUMI_STACK_NAME}

# API Gateway
API_GATEWAY_STAGE=dev
API_BASE_URL=https://your-api-id.execute-api.${AWS_REGION}.amazonaws.com/${API_GATEWAY_STAGE}

# Lambda Configuration
LAMBDA_RUNTIME=python3.11
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY_SIZE=512

# Cognito Configuration
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_USER_POOL_CLIENT_ID=your-user-pool-client-id
COGNITO_IDENTITY_POOL_ID=your-identity-pool-id

# Apple Sign In
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_BUNDLE_ID=com.yourcompany.footprint

# App Store Connect (TestFlight automation)
APP_STORE_CONNECT_KEY_ID=GA9T4G84AU
APP_STORE_CONNECT_ISSUER_ID=your-issuer-id-from-app-store-connect
# Private key stored at ~/.private_keys/AuthKey_GA9T4G84AU.p8

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Geographic Data Configuration
GEOGRAPHIC_DATA_VERSION=v1.0.0
COUNTRY_BOUNDARIES_FILE=countries.geojson
US_STATES_BOUNDARIES_FILE=us-states.geojson
CANADA_PROVINCES_BOUNDARIES_FILE=canada-provinces.geojson

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_TIMEOUT_SECONDS=30

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_BURST_LIMIT=10

# CloudWatch
CLOUDWATCH_LOG_GROUP=/aws/lambda/footprint
CLOUDWATCH_LOG_RETENTION_DAYS=14

# Testing
TEST_AWS_REGION=us-east-1
TEST_DYNAMODB_ENDPOINT=http://localhost:8000  # For local testing
TEST_S3_ENDPOINT=http://localhost:9000        # For local testing with minio

# Security
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=your-32-character-encryption-key

# Development
LOCAL_DEV_PORT=8080
CORS_ORIGINS=http://localhost:8080,https://localhost:8080
